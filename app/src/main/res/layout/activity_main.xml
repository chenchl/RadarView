<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ccl.view.radarview.MainActivity">

    <com.ccl.view.radarview.RadarView
        android:id="@+id/radarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rvPointSize="5dp"
        app:rvRadarColor="@android:color/darker_gray"
        app:rvRadarNum="8"
        app:rvScoreColor="@android:color/holo_blue_light"
        app:rvTextColor="@android:color/tertiary_text_dark"
        app:rvTextSize="10sp" />

</android.support.constraint.ConstraintLayout>
